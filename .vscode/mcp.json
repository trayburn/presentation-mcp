{
  "servers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer YOUR-GITHUB-PAT-GOES-HERE"
      }
    },
    "microsoft-docs": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://learn.microsoft.com/api/mcp"
      ],
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "scryfall": {
      "command": "npx",
      "args": [
        "scryfall-mcp-server"
      ]
    }
  }
}